@page
@model twoGirlsOnlineShop.Pages.Admin.Users.RecoverModel

@{
    ViewData["Title"] = "Recover User";
}
<div class="container">
    <h1>Recover</h1>

    <div class="alert alert-success">Are you sure you want to Recover this User?</div>
    <br />
    <div class="d-flex justify-content-around align-items-center">
        <img src="@Model.UserModel?.ImagePath" class="rounded-circle border" width="200" height="200" />

        <dl class=" row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Model.UserModel.FirstName</dd>

            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.UserModel.LastName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.UserModel.Email</dd>

            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.UserModel.PhoneNumber</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.UserModel.UserRole?.RoleTitle</dd>

        </dl>

        <form method="post" class="text-nowrap">
            <input type="hidden" asp-for="@Model.UserModel.Id" />
            <button type="submit" class="btn btn-success" >
            Recover <i class="fa-solid fa-recycle"></i>
            </button> |
            <a href="/admin/Users/DeletedUsers" class="btn btn-dark">
                Back to List <i class="fa-solid fa-rotate-left"></i>
            </a>
        </form>
    </div>
</div>
@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/users"><i class="fa fa-close"></i></a>
    </form>

}
