@page
@model twoGirlsOnlineShop.Pages.Admin.Permissions.IndexModel
@{
    ViewData["Title"] = "List of Roles";
    int i = 1;
}
<br />
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">
                    #
                </th>
                <th class="text-center">
                    Role Title
                </th>
                
                <th class="text-center">
                    <a class="btn btn-success" href="/admin/Permissions/CreateOrEdit">Create New <i class="fa-solid fa-plus"></i></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Roles)
            {
                <tr>
                    <th class="text-center">
                        @i
                    </th>
                    <td class="text-center">
                        @item.RoleTitle
                    </td>
                    <td class="text-center">
                        <a class="btn btn-secondary" href="/admin/Permissions/CreateOrEdit?id=@item.RoleId">Edit <i class="fa-solid fa-pencil"></i></a> |
                        <a class="btn btn-danger" href="/admin/Permissions/Delete?id=@item.RoleId">Delete <i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/users"><i class="fa fa-close"></i></a>
    </form>

}