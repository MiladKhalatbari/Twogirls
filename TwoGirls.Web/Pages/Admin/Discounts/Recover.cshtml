@page
@model twoGirlsOnlineShop.Pages.Admin.Discounts.RecoverModel
@{
    ViewData["Title"] = "Recover Discount";
}
<div class="container">
    <h1>Delete</h1>

    <div class="alert alert-success">Are you sure you want to Recover this Discount?</div>
    <br />
    <div class="d-flex justify-content-around align-items-center">
        <dl class=" row">
            <dt class="col-sm-2">Discount Code</dt>
            <dd class="col-sm-10">@Model.Discount.Code</dd>

            <dt class="col-sm-2">Discount Percent</dt>
            <dd class="col-sm-10">@Model.Discount.DiscountPercent</dd>

            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.Discount.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-2"> Eend Date</dt>
            <dd class="col-sm-10">@Model.Discount.EendDate.ToShortDateString()</dd>

            <dt class="col-sm-2">Useable Count</dt>
            <dd class="col-sm-10">@Model.Discount.UseableCount</dd>
        </dl>

        <form method="post" class="text-nowrap">
            <input type="hidden" name="discountId" value="@Model.Discount.DiscountId" />
            <button type="submit" class="btn btn-success">
                Recover <i class="fa-solid fa-recycle"></i>
            </button> |
            <a href="/admin/Discounts/DeletedDiscounts" class="btn btn-dark">
                Back to List <i class="fa-solid fa-rotate-left"></i>
            </a>
        </form>
    </div>
</div>
@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/Discounts/DeletedDiscounts"><i class="fa fa-close"></i></a>
    </form>

}