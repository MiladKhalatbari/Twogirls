@page
@model twoGirlsOnlineShop.Pages.Admin.Categories.CreateModel
@{
    ViewData["Title"] = (Model.Category.Id == 0 ? "Create Category" : "Edit Category");
}

<h1>@(Model.Category.Id == 0 ? "Create New Category" : "Edit Category")</h1>

<hr />

<form method="post" enctype="multipart/form-data" class="container-lg">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Category.Id" />
    <input type="hidden" asp-for="@Model.Category.ParentId" />
    <div class="form-group">
        <label asp-for="@Model.Category.Name" class="control-label"></label>
        <input asp-for="@Model.Category.Name" class="form-control" />
        <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Category.Description" class="control-label"></label>
        <textarea asp-for="@Model.Category.Description" class="form-control"></textarea>
        <span asp-validation-for="@Model.Category.Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="@(Model.Category.Id == 0 ? "Create" : "Edit")" class="btn btn-primary" />
        <a href="/admin/Categories" class="btn btn-danger">Back to List</a>

    </div>

</form>


@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/Categories"><i class="fa fa-close"></i></a>
    </form>

}