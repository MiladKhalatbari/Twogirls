@page
@model twoGirlsOnlineShop.Pages.Admin.Transactions.DeleteModel
@{
    ViewData["Title"] = "Delete Transaction";
}
<div class="container">
    <h1>Delete</h1>

    <div class="alert alert-danger">Are you sure you want to Delete this Transaction?</div>
    <br />
    <div class="d-flex justify-content-around align-items-center">
        <dl class=" row">
            <dt class="col-sm-2"> UserName</dt>
            <dd class="col-sm-10">@(Model.Transaction.User.FirstName + " " + Model.Transaction.User.LastName)</dd>

            <dt class="col-sm-2">Transaction Type</dt>
            <dd class="col-sm-10">@Model.Transaction.TransactionType.Title</dd>
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Model.Transaction.Amount</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Transaction.Date.ToShortDateString()</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Transaction.Description</dd>
        </dl>

        <form method="post" class="text-nowrap">
            <input type="hidden" value="@Model.Transaction.Id" />
            <button type="submit" class="btn btn-danger">
                Delete <i class="fa-regular fa-trash-can"></i>
            </button> |
            <a href="/admin/Transactions" class="btn btn-dark">Back to List <i class="fa-solid fa-rotate-left"></i></a>
        </form>
    </div>
</div>
@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/Transactions"><i class="fa fa-close"></i></a>
    </form>

}