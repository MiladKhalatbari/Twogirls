@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]-twoGirlsOnlineShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true">

    @await RenderSectionAsync("Style", required: false)

</head>
<body>
    <!-- navbar  -->
    @await Component.InvokeAsync("MainMenuComponent")
    <!-- navbar end  -->
    <div id="form-modal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
    <main role="main">
        @RenderBody()
    </main>

    <footer id="footer" class=" bg-verydark ">
        <div class="container-xl p-0 ">
            <div class="row m-0">
                <div class="col-12 col-md-8 bg-verydark row m-0">

                    <div class=" col-sm-4 p-2 text-white-50 bg-verydark">
                        <a class="h6  p-2 text-white-50  collapsible">
                            MAY WE HELP YOU? <i class="fa-solid fa-caret-down d-sm-none text-white-50 ms-2"></i>
                        </a>
                        <ul class="mt-1 list-group list-group-flush collapscontent" id="collapseHELP">
                            <li class="list-group-item"><a href="#" class="underline-hover-efect "> FAQs</a></li>
                            <li class="list-group-item"><a href="#" class="underline-hover-efect ">Contact Us</a></li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">Email Unsubscribe</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">Payment Options</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">Shipping Services</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    Returns &
                                    Exchanges
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">Corporate Gifting</a>
                            </li>
                            <li class="list-group-item"><a href="#" class="underline-hover-efect ">Product Care</a></li>
                            <li class="list-group-item"><a href="#" class="underline-hover-efect ">Sitemap</a></li>
                        </ul>
                    </div>

                    <div class="col-sm-4 p-2 text-white-50 bg-verydark">
                        <a class="h6 p-2 text-white-50 collapsible">
                            THE COMPANY <i class="fa-solid fa-caret-down d-sm-none text-white-50 ms-2"></i>
                        </a>
                        <ul class="mt-1 list-group list-group-flush collapscontent" id="collapseCOMPANY">
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">About TwoGirls</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect "> TwoGirls Garden</a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    TwoGirls
                                    Equilibrium
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect "> Code of Ethics</a>
                            </li>
                            <li class="list-group-item"><a href="#" class="underline-hover-efect "> Careers</a></li>
                            <li class="list-group-item"><a href="#" class="underline-hover-efect "> Legal</a></li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    Privacy & Cookie
                                    Policy
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    Corporate
                                    Information
                                </a>
                            </li>
                        </ul>
                    </div>


                    <div class="col-sm-4 p-2 text-white-50 bg-verydark">
                        <a class="h6 text-white-50 p-2 collapsible">
                            FIND US ON <i class="fa-solid fa-caret-down d-sm-none text-white-50 ms-2"></i>
                        </a>
                        <ul class="mt-1 list-group list-group-flush collapscontent" id="collapseFindUs">
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    <i class="fa-brands fa-square-facebook p-1"></i>
                                    Facebook
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    <i class="fa-brands fa-twitter p-1"></i> Twitter
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    <i class="fa-brands fa-instagram p-1"></i>
                                    Instagram
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="underline-hover-efect ">
                                    <i class="fa-brands fa-square-youtube p-1"></i>
                                    YouTube
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="col-12 col-md-4 text-white-50 bg-verydark">
                    <p class="h6 p-2">SIGN UP FOR TwoGirls UPDATES</p>
                    <p class="h6 p-2">
                        By entering your email address below, you consent to receiving our newsletter with
                        access to
                        our latest collections, events and initiatives. More details on this are provided in our <a class="text-danger" href="#"> Privacy Policy </a>
                    </p>


                    <div class="ps-2 col-8 ">
                        <div class="input-group">
                            <input type="email" placeholder="Email..."
                                   class="bg-dark form-control-sm text-white-50 col-9 col-md-9 border-0"
                                   aria-describedby="button-email">
                            <button class="btn btn-dark col-2 text-end pe-3" type="button" id="button-email">
                                <i class=" border-0 text-white-50 fa-regular fa-envelope "></i>
                            </button>
                        </div>
                    </div>


                </div>
            </div>
            <div class="footer-ul p-2">
                <a class=" m-0 d-block text-center text-white-50 bg-verydark">
                    © 2016 - 2021 Twogirls S.p.A. - All rights
                    reserved. G Commerce Europe S.p.A. - IT VAT nr 05142860484. SIAE LICENCE # 2294/I/1936 and
                    5647/I/1936
                </a>
            </div>

        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/4ab1c0077a.js" crossorigin="anonymous"></script>
    <script src="~/js/javascript.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
