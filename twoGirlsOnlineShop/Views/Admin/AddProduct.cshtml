@using TwoGirls.Core.DTOs;
@model AddOrEditProductViewModel

@{
    ViewData["Title"] = "AddProduct";
}
<br>
<br>
<br>

<h1>AddProduct</h1>
@{
    if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
}
<hr />
<div class="container-md">
    <div class="col">
        <form asp-controller="Admin" asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
            <div class="form-group col-12 col-md-6">
                <label asp-for="Title" class="control-label fw-bolder"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="Description" class="control-label fw-bolder"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>            
            </div>
            <div class="row mb-3">
            <div class="form-group col-12 col-md-6">
                <label asp-for="ReleaseDate" class="control-label fw-bolder"></label>
                <input asp-for="ReleaseDate" type="date" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="PurchasePrice" class="control-label fw-bolder"></label>
                <input asp-for="PurchasePrice" class="form-control" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>          
            </div>
              <div class="row mb-3">
            <div class="form-group col-12 col-md-6">
                <label asp-for="SalesPrice" class="control-label fw-bolder"></label>
                <input asp-for="SalesPrice" class="form-control" />
                <span asp-validation-for="SalesPrice" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="DiscountedPrice" class="control-label fw-bolder"></label>
                <input asp-for="DiscountedPrice" class="form-control" />
                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
            </div>            
            </div>
            <div class="row mb-3">
            <div class="form-group col-12 col-md-6">
                <label asp-for="QuantityInStock" class="control-label fw-bolder"></label>
                <input asp-for="QuantityInStock" class="form-control" />
                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <label class="fw-bolder" for="files">Select files:</label>
                <input type="file" name="Files" multiple class="form-control" />
                </div>
                @*  <div class="form-group col-12 col-md-6">
                    <label class="fw-bolder" for="files">Select Image 1:</label>
                    <input type="file" name="Files" id="files" class="form-control" />
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="fw-bolder" for="files">Select Image 2:</label>
                    <input type="file" name="Files" id="files" class="form-control" />
                </div>
                <div class="form-group col-12 col-md-6">
                    <label class="fw-bolder" for="files">Select Image 3:</label>
                    <input type="file" name="Files" id="files" class="form-control" />
                </div>*@
               @*<div class="form-group">
                    <label asp-for="Files"></label>
                    <input asp-for="Files" type="file" multiple class="form-control" />
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>*@

            </div>
            <div class="form-group row m-0">
                <label class="h3">Categories</label>
                @foreach (var category in Model.Categories)
                {
                    <div class="form-check col-6 col-md-3">
                        <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" )>
                        <label class="form-check-label fw-bolder" for="category_@category.Id">
                            @category.Name
                        </label>
                    </div>
                }
            </div>
            <hr />
            <div><a asp-action="AddCategory" class="btn btn-success">Add new Category</a>   <a asp-action="RemoveCategory" class="btn btn-danger">Delete Category</a></div>
            <hr>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> | <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>