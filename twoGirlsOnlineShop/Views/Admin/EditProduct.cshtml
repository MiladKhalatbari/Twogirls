                    int i = 0;
                    foreach(var img in Model.Files)
                    {
                        <div class="form-group">
                            <label for="fileInput">Images:</label>
                            <input type="file" name="Files" multiple >
                            <div id="thumb-output"></div>
                       </div>
                       i++;
                    }
                  }*@
                <div class="form-group">
                    <label asp-for="Files"></label>
                    <input asp-for="Files" class="form-control" />
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
               
            <div class="form-group row m-0">
            <label class="h3">Categories</label>
          @foreach (var category in Model.Categories)
          {
              <div class="form-check col-6 col-md-3">
                  <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" @(Model.SelectedCategories.Contains(category.Id) ? "checked" : "")>
                  <label class="form-check-label fw-bolder" for="category_@category.Id">
                      @category.Name
                  </label>
              </div>
          }
                </div>
                <hr />
                <div><a asp-action="AddCategory" class="btn btn-success">Add new Category</a>  <a asp-action="RemoveCategory" class="btn btn-danger">Delete Category</a></div>

            <hr>
            <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-success" />  <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>