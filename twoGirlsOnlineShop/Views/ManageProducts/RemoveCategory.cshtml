@using TwoGirls.DataLayer.Entities;
@model IEnumerable<Category>

@{
    ViewData["Title"] = "RemoveCategory";
}


<div class="container-md">
    <h4 class="alert alert-danger m-2">Are you sure you want to delete this?</h4>

    <h1>RemoveCategory</h1>
    <hr />
    <dl class="row">
        @foreach(var item in Model)
        {
            <dt class="col-sm-2">
                Category Name:
            </dt>
            <dd class="col-sm-10">
                @item.Name
            </dd>
            <dt class="col-sm-2">
                Category Description:
            </dt>
            <dd class="col-sm-10">
                @item.Description
            </dd>
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
            <form asp-action="RemoveCategory">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
            </form>
            </dd>
        }
        
    </dl>
    <a asp-action="Index">Back to List</a>

</div>
