@page
@model twoGirlsOnlineShop.Pages.Admin.Products.DeleteModel
@{
}


@{
    ViewData["Title"] = "Remove Product";
}

<br />
<div class="container-md">
    <h4 class="alert alert-danger m-2">Are you sure you want to delete this Product?</h4>
    <h1>Remove Product</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">
            @foreach(var img in Model.Product.ImagePaths)
            {
                <img src="@img.Url" class="img-fluid border m-1 d-inline-flex max-width-hight-150"width="200" height="200">
            }
        </dd>
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.Title
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            Release Date
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.ReleaseDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            Purchase Date
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.PurchaseDate.ToShortDateString();
        </dd>
        <dt class = "col-sm-2">
            Purchase Price

        </dt>
        <dd class = "col-sm-10">
            @Model.Product.PurchasePrice.ToString("C");
        </dd>
        <dt class = "col-sm-2">
            Sales Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.SalesPrice.ToString("C");
        </dd>
        <dt class = "col-sm-2">
            Discounted Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.DiscountedPrice.ToString("C");
        </dd>
        <dt class = "col-sm-2">
            Quantity In Stock
        </dt>
        <dd class = "col-sm-10">
            @Model.Product.QuantityInStock.ToString();
        </dd>
    </dl>
    
    <form method="post" class="text-nowrap">
        <input type="hidden" asp-for="@Model.Product.Id" />
        <button type="submit" class="btn btn-danger" />
        Delete <i class="fa-regular fa-trash-can"></i>
            </button> |
            <a href="/admin/Products" class="btn btn-dark">Back to List <i class="fa-solid fa-rotate-left"></i></a>
    </form>
</div>
@section AdminSearchBox {
        <i class="fa fa-search search-show"></i>
        <form class=" search-area ">
            <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
            <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
            <a href="/admin/users"><i class="fa fa-close"></i></a>
        </form>

}