@page
@model twoGirlsOnlineShop.Pages.Admin.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}
<div class="container">
<h1>Delete</h1>

<div class="alert alert-danger">Are you sure you want to Delete this User?</div>
<br />
<div class="d-flex justify-content-around align-items-center">
    <img src="@Model.User.ImagePath" class="rounded-circle border" width="200" height="200" />

    <dl class=" row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.User.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.User.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.User.PhoneNumber</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.User.UserRole.RoleTitle</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.User.</dd>
    </dl>

        <form method="post" class="text-nowrap">
        <input type="hidden" asp-for="@Model.User.Id" />
            <button type="submit" class="btn btn-danger" />
            Delete <i class="fa-regular fa-trash-can"></i>
                </button> |
                <a href="/admin/users" class="btn btn-dark">Back to List <i class="fa-solid fa-rotate-left"></i></a>
    </form>
</div>
</div>
@section AdminSearchBox {
    <i class="fa fa-search search-show"></i>
    <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/users"><i class="fa fa-close"></i></a>
    </form>

}
