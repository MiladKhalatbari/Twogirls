@page
@model twoGirlsOnlineShop.Pages.Admin.Users.IndexModel
@{
}

@using TwoGirls.DataLayer.Entities;
@{
    ViewData["Title"] = "List of Users";
}
@{
    int i = 1;
}
<br />
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">
                    #
                </th>
                <th class="text-center">
                    FirstName
                </th>
                <th class="text-center">
                    lastName
                </th>
                <th class="text-center">
                    Email
                </th>
                <th class="text-center">
                    PhoneNumber
                </th>
                <th class="text-center">
                    ActiveCode
                </th>
                <th class="text-center">
                    Register Date
                </th>
                <th class="text-center">
                    User Role
                </th>
                <th class="text-center">
                    <a class="btn btn-success" href="/admin/users/CreateOrEdit">Create New <i class="fa-solid fa-plus"></i></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UsersForAdminViewModel.Users)
            {
                <tr>
                    <th class="text-center">
                        @i
                    </th>
                    <td class="text-center">
                        @item.FirstName
                    </td>
                    <td class="text-center">
                        @item.LastName
                    </td>
                    <td class="text-center">
                        @item.Email
                    </td>
                    <td class="text-center">
                        @item.PhoneNumber
                    </td>
                    <td class="text-center  @(item.IsActive ? "text-success":"text-danger")">
                        @item.ActiveCode
                    </td>
                    <td class="text-center">
                        @item.RegisterDate.ToShortDateString()
                    </td>
                   <td class="text-center">
                       @item.UserRole.RoleTitle
                    </td>
                    <td class="text-center">
                        <a class="btn btn-secondary" href="/admin/users/CreateOrEdit?id=@item.Id">Edit <i class="fa-solid fa-pencil"></i></a> |
                        <a class="btn btn-danger" href="/admin/users/Delete?id=@item.Id">Delete <i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @((Model.UsersForAdminViewModel.CurrentPage == 1) ? "disabled" : "")">
            <a class="page-link" href="/admin/users?filter=@Model.UsersForAdminViewModel.Filter&pageId=@(Model.UsersForAdminViewModel.CurrentPage - 1)" tabindex="-1" aria-disabled="@(Model.UsersForAdminViewModel.CurrentPage == 1 ? "true" : "false")">Previous</a>
        </li>
        @for (int j = 1; j <= Model.UsersForAdminViewModel.PageCount; j++)
        {
            <li class="page-item @((j == Model.UsersForAdminViewModel.CurrentPage) ? "active" : "")">
                <a class="page-link" href="/admin/users?filter=@Model.UsersForAdminViewModel.Filter&pageId=@j">@j</a>
            </li>
        }
        <li class="page-item @((Model.UsersForAdminViewModel.CurrentPage == Model.UsersForAdminViewModel.PageCount) ? "disabled" : "")">
            <a class="page-link" href="/admin/users?filter=@Model.UsersForAdminViewModel.Filter&pageId=@(Model.UsersForAdminViewModel.CurrentPage + 1)" aria-disabled="@(Model.UsersForAdminViewModel.CurrentPage == Model.UsersForAdminViewModel.PageCount ? "true" : "false")">Next</a>
        </li>
    </ul>
</nav>

@section AdminSearchBox {
        <i class="fa fa-search search-show"></i>
        <form class=" search-area ">
        <button type="submit" class="bg-transparent border-0"> <i class="fa fa-search"></i></button>
        <input class="h-50" type="text" placeholder="Search..." name="filter" id="">
        <a href="/admin/users"><i class="fa fa-close"></i></a>
    </form>
    
}